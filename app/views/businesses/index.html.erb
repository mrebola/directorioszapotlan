<%= form_tag businesses_path, method: 'get' do %>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", name: nil %>
<% end %>


<br />

<% for business in @businesses %>
  <%= link_to business.name, business_path(business) %><br>
  <%= business.description %><br>
  <%= business.website %><br>
  <%= business.city %><br>
  <%= business.email %><br>
  <%= business.phone %><br>
  <%= business.cellphone %><br>
  <%= business.address %><br>
  <%= link_to "Edit", edit_business_path(business) %>
  <%= link_to "Destroy", business_path(business), method: :delete %>
  <hr>
<% end %>


<%= link_to 'New Business', new_business_path %>
